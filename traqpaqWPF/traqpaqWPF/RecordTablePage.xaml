<Page x:Class="traqpaqWPF.RecordTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      DataContext="{Binding RelativeSource={RelativeSource Self}}" 
      Title="RecordTablePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" Name="listViewRecords" ItemsSource="{Binding RecordTable}" MouseDoubleClick="listViewRecords_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Track Name" DisplayMemberBinding="{Binding trackName}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateStamp}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
