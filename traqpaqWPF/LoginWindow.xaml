<Window x:Class="traqpaqWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login to traqpaq.com" Height="258" Width="571" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />            
            <RowDefinition Height="65*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Label Content="Login" Name="label1" FontSize="30" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Username / Email" Grid.Row="0" Name="label2" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
            <Label Content="Password" Grid.Row="1" Name="label3" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
            <TextBox Grid.Column="1" Grid.Row="0" Height="23" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Name="textBoxUsername" TabIndex="0" Margin="0,0,10,0" Padding="0,0,0,5" />
            <PasswordBox Grid.Column="1" Grid.Row="1" Height="23" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Name="passwordBox" TabIndex="1" Margin="0,0,10,0" Padding="0,0,0,5" />
        </Grid>
        <Button Name="buttonLogin" Grid.Row="1" Content="Login" IsDefault="True" VerticalAlignment="Top" Width="60" Click="buttonLogin_Click" TabIndex="2" Margin="44,79,178,0" />
        <Button Name="buttonSignUp" Grid.Row="1" Content="Sign Up" VerticalAlignment="Top" Width="60" Click="buttonSignUp_Click" TabIndex="3" Margin="109,79,113,0" />
        <Button Name="buttonCancel" Grid.Row="1" Content="Cancel" IsCancel="True" VerticalAlignment="Top" Width="60" Click="buttonCancel_Click" TabIndex="4" Margin="174,79,48,0" />
        <Label Content="Login with Facebook" FontSize="30" Grid.Column="1" />
        <WebBrowser x:Name="loginBrowser" Grid.Column="1" Grid.Row="1" UseLayoutRounding="False" Margin="5" />
    </Grid>
</Window>
